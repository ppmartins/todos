<h4>Edit To Do:</h4>

<%= simple_form_for @todo do |f| %>
  <%= f.input :title, placeholder: 'Add a To Do that is important you achieve (70 characters max)', error: 'To Do is mandatory, please specify one in less than 70 characters', input_html: { maxlength: 70 } %>
  <%= f.button :submit, 'Save To Do' %>
<% end %>

<%= link_to 'Back', todo_path %>
